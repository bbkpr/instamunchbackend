generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id               String        @id @default(uuid())
  name             String
  basePrice        Float
  expirationPeriod Int
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  machineItems     MachineItem[]
}

model MachineItem {
  id        String  @id @default(uuid())
  name      String?
  quantity  Int     @default(0)
  machine   Machine @relation(fields: [machineId], references: [id])
  machineId String
  item      Item    @relation(fields: [itemId], references: [id])
  itemId    String
}

model Location {
  id               String            @id @default(uuid())
  address1         String
  address2         String?
  city             String
  stateOrProvince  String
  country          String
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  machineLocations MachineLocation[]
}

model MachineLocation {
  id         String   @id @default(uuid())
  name       String
  machine    Machine  @relation(fields: [machineId], references: [id])
  machineId  String
  location   Location @relation(fields: [locationId], references: [id])
  locationId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model MachineType {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  machines  Machine[]
}

model MachineManufacturer {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  machines  Machine[]
}

// Update Machine model to include manufacturer
model Machine {
  id               String              @id @default(uuid())
  name             String
  machineTypeId    String
  machineType      MachineType         @relation(fields: [machineTypeId], references: [id])
  manufacturerId   String
  manufacturer     MachineManufacturer @relation(fields: [manufacturerId], references: [id])
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  machineItems     MachineItem[]
  machineLocations MachineLocation[]
}
