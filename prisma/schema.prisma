generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id               String        @id @default(uuid())
  name             String?
  basePrice        Float?
  expirationPeriod String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime
  machineItems     MachineItem[]
}

model MachineItem {
  id        String  @id @default(uuid())
  name      String?
  machine   Machine @relation(fields: [machineId], references: [id])
  machineId String
  item      Item    @relation(fields: [itemId], references: [id])
  itemId    String
}

model MachineLocation {
  id              String   @id @default(uuid())
  name            String
  address1        String
  address2        String?
  city            String
  stateOrProvince String
  country         String
  createdAt       DateTime @default(now())
  updatedAt       DateTime
}

model Machine {
  id        String        @id @default(uuid())
  name      String?
  createdAt DateTime      @default(now())
  updatedAt DateTime
  items     MachineItem[]
}
